@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick=@IncrementCount>Click me</MudButton>
<RadzenButton Text="Click me" Click=@IncrementCount></RadzenButton>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<MudMarkdown Value="@Value" />

@code {
    private string Value { get; } = "text *italics* and **bold**\r\n1. blah\r\n1. blah2";
     string text = "Hi";
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
